{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES6"
  },
  "include": ["backend/**/*.ts"],
  "exclude": ["backend/**/*.d.ts", "backend/**/*.spec.ts"]
}
