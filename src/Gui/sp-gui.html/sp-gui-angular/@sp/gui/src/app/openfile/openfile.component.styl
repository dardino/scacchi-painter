
h1.title
  text-shadow: -1px -1px 1px grey, 1px 1px 0px black;
  opacity: 0.8;
  padding: 1rem;

ul>li
  list-style: none
  margin-top: 1rem

  a
    background-color: rgba(255,255,255,0.1)

  .open-button
    box-sizing border-box
    display flex
    flex-direction column
    align-items center
    width 7rem
    height 7rem

    > mat-icon
      display flex
      align-items: center
      flex 1 1 1rem
    > span
      flex 1 1 1rem
