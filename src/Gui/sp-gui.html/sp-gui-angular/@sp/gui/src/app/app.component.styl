#app-main
  background-image url("../assets/bg.jpg")
  background-size 10rem
  background-position center
  background-attachment scroll
  background-blend-mode normal

.sidenav-content
  display flex
  flex-direction column

.main-app-toolbar
  flex 0 0 auto

.container
  flex 1 1 auto
  overflow auto
  position relative

.app-title
  flex: 1 1 auto;
  -webkit-user-select none
  -webkit-app-region drag
  display flex
  flex-direction column;
  align-items flex-start
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

  span,sub
    display block
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

  sub
    padding 0 1em 0 0
    margin 0
    line-height 1em
    font-style italic
    font-size 0.6em;
