@import "../../../mediaquery"

#app-main
  background-image url("../assets/bg.jpg")
  background-size 10rem
  background-position center
  background-attachment scroll
  background-blend-mode normal

.sidenav-content
  display flex
  flex-direction column

.main-app-toolbar
  flex 0 0 auto

.container
  flex 1 1 auto
  overflow auto
  position relative

.app-title
  flex 1 1 auto
  -webkit-user-select none
  -webkit-app-region drag
  display flex
  flex-direction column
  align-items flex-start
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

  span, sub
    display block
    overflow hidden
    text-overflow ellipsis
    white-space nowrap

  sub
    padding 0 1em 0 0
    margin 0
    line-height 1em
    font-style italic
    font-size 0.6em

.spinner-container
  position fixed
  top 0
  left 0
  bottom 0
  right 0
  background rgba(0, 0, 0, 0.5)
  z-index 999
  display flex
  align-items center
  justify-content center
