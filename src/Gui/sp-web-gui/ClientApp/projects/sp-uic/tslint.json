{
  "extends": "../../tslint.json",
  "rules": {
    "directive-selector": [true, "attribute", "lib", "camelCase"],
    "component-selector": [true, "element", "lib", "kebab-case"],
    "quotemark": [true, "double", "jsx-double"],
    "curly": [true, "ignore-same-line"],
    "max-line-length": {
      "options": {
        "ignore-pattern": "^import |^export {(.*?)} |^\\s*{(.*?)},?$",
        "limit": 155
      }
    }
  }
}
