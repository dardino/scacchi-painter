:host {
  display: flex;
  padding-top: 100%; /* 1:1 Aspect Ratio */
  position: relative;
}

.white {
  background: white;
}

.black {
  background: #294053;
}

div {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}

canvas {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
}
