{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "runOptions": {
                "runOn": "default"
            },
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-web-gui"
            },
            "label": "build",
            "command": "dotnet build",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "type": "func",
            "label": "func: host start",
            "command": "host start",
            "problemMatcher": "$func-node-watch",
            "isBackground": true,
            "dependsOn": "npm watch (functions)",
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-gui.html/sp-gui-angular/api"
            }
        },
        {
            "type": "shell",
            "label": "npm build (functions)",
            "command": "npm run build",
            "dependsOn": "npm clean (functions)",
            "problemMatcher": "$tsc",
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-gui.html/sp-gui-angular/api"
            }
        },
        {
            "type": "shell",
            "label": "npm watch (functions)",
            "command": "npm run watch",
            "dependsOn": "npm clean (functions)",
            "problemMatcher": "$tsc-watch",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-gui.html/sp-gui-angular/api"
            }
        },
        {
            "type": "shell",
            "label": "npm install (functions)",
            "command": "npm install",
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-gui.html/sp-gui-angular/api"
            }
        },
        {
            "type": "shell",
            "label": "npm prune (functions)",
            "command": "npm prune --production",
            "dependsOn": "npm build (functions)",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-gui.html/sp-gui-angular/api"
            }
        },
        {
            "type": "shell",
            "label": "npm clean (functions)",
            "command": "npm run clean",
            "dependsOn": "npm install (functions)",
            "options": {
                "cwd": "${workspaceFolder}/src/Gui/sp-gui.html/sp-gui-angular/api"
            }
        }
    ]
}
